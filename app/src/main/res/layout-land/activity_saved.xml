<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Saved"
    android:background="@drawable/bglans">

    <TextView
        android:id="@+id/select_langusge_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Select Language :"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/select_lang_saved_spin"
        app:layout_constraintStart_toStartOf="@+id/select_lang_saved_spin"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/select_lang_saved_spin"
        android:layout_width="267dp"
        android:layout_height="28dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_langusge_text" />

    <Button
        android:id="@+id/get_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/home_btn"
        android:text="Get"
        app:layout_constraintEnd_toEndOf="@+id/select_lang_saved_spin"
        app:layout_constraintStart_toEndOf="@+id/select_lang_saved_spin"
        app:layout_constraintTop_toBottomOf="@+id/select_lang_saved_spin" />
</androidx.constraintlayout.widget.ConstraintLayout>